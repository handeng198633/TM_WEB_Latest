<% provide(:title, "旅行团统计") %>

<div id="content-header">
  <h1>旅行团统计</h1>
</div>
<div class="content-fluid" style="margin: 79px;">
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box">
          <div class="widget-title"><span class="icon"> <i class="icon-briefcase"></i> </span>
                    <%= link_to "新增", new_finance_path, class: "btn btn-primary" %>
                  </div>
                    <div class="widget-content">
                        <div class="row-fluid">
                              <table id="finances" class="display" data-source="<%= finances_url(:format => "json") %>">
                                  <thead>
                                    <tr>
                                      <th>ID</th>
                                      <th>出发日期</th>
                                      <th>完团日期</th>
                                      <th>行程</th>
                                      <th>组团社</th>
                                      <th>人数</th>
                                      <th>单价</th>
                                      <th>应收金额</th>
                                      <th>已收金额</th>
                                      <th>余款</th>
                                      <th>备注</th>
                                    </tr>
                                  </thead>
                                  <tbody>
                                  </tbody>
                                </table>
                        </div>
                    </div>
              </div>
            </div>
        </div>
</div>
